<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Special proposal sub-views for copy and medusa functions accessed from Lookup-->
    <bean id="PropDev-CopyView" parent="PropDev-CopyView-parentBean"/>
    <bean id="PropDev-CopyView-parentBean" abstract="true"
          parent="Uif-FormView" p:header.render="false" p:breadcrumbs.render="false"
          p:viewHelperService="#{#getService('proposalDevelopmentViewHelperService')}"
          p:formClass="org.kuali.coeus.propdev.impl.core.ProposalDevelopmentDocumentForm">
        <property name="stickyFooter" value="@{renderedInDialog}"/>
        <property name="applicationHeader.render" value="@{!renderedInDialog}"/>
        <property name="singlePageView" value="true"/>
        <property name="onDocumentReadyScript"
                  value="KradResponse.prototype.redirectHandler = function(content, dataAttr) {var redirectUrl = jQuery(content).text().trim();dirtyFormState.skipDirtyChecks = true;window.top.location.href = redirectUrl;};"/>
        <property name="page">
            <bean parent="Uif-Page" p:header.render="false">
                <property name="items">
                    <list>
                        <bean parent="PropDev-CopyDialog" p:fieldBindingObjectPath="proposalCopyCriteria" p:order="10"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="PropDev-CopyDialog-Button-Continue"
                              p:actionLabel="Copy..." p:methodToCall="copy"
                              p:performClientSideValidation="false" p:order="10"/>
                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="Close"
                              p:onClickScript="e.preventDefault();closeIframeDialog();return false;"
                              p:dialogResponse="false" p:order="20"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-ReactMedusaPage" parent="PropDev-ReactMedusaPage-parent"/>
    <bean id="PropDev-ReactMedusaPage-parent" abstract="true" parent="Uif-Page">
        <property name="id" value="medusaRoot" />
        <property name="template" value="/WEB-INF/ftl/krad/coeus/container/medusaReact.ftl"/>
        <property name="templateName" value="uif_medusaReact"/>
    </bean>

    <bean id="PropDev-ReactMedusaView" parent="PropDev-ReactMedusaView-parentBean"/>
    <bean id="PropDev-ReactMedusaView-parentBean" abstract="true" parent="Uif-FormView"
          p:header.render="false" p:breadcrumbs.render="false">
        <property name="stickyFooter" value="@{renderedInDialog}"/>
        <property name="applicationHeader.render" value="@{!renderedInDialog}"/>
        <property name="singlePageView" value="true"/>
        <property name="renderForm" value="false"/>
        <property name="additionalScriptFiles">
            <list>
                <value>client/assets/medusaClient-@{#ConfigProperties['frontend.timestamp']}.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>css/medusa-react.css</value>
            </list>
        </property>
        <property name="page">
            <bean parent="PropDev-ReactMedusaPage" p:header.render="false" />
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="Close"
                              p:onClickScript="e.preventDefault();closeIframeDialog();return false;"
                              p:dialogResponse="false" p:order="20"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-MedusaView" parent="PropDev-MedusaView-parentBean"/>
    <bean id="PropDev-MedusaView-parentBean" abstract="true"
          parent="Uif-FormView" p:header.render="false" p:breadcrumbs.render="false"
          p:formClass="org.kuali.coeus.propdev.impl.core.ProposalDevelopmentDocumentForm"
          p:viewHelperService="#{#getService('proposalDevelopmentViewHelperService')}">
        <property name="stickyFooter" value="@{renderedInDialog}"/>
        <property name="applicationHeader.render" value="@{!renderedInDialog}"/>
        <property name="singlePageView" value="true"/>
        <property name="additionalScriptFiles">
            <list>
                <value>scripts/common/medusa.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>css/common/core.css</value>
            </list>
        </property>
        <property name="page">
            <bean parent="Uif-Page" p:header.render="false">
                <property name="items">
                    <list>
                        <bean parent="PropDev-MedusaSection-TabGroup"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="Close"
                              p:onClickScript="e.preventDefault();closeIframeDialog();return false;"
                              p:dialogResponse="false" p:order="20"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="onLoadScript" value="Kc.Medusa.externalMedusaLoader();"/>
    </bean>
    
    <bean id="PropDev-S2sSubmisisonDetailsView" parent="PropDev-S2sSubmisisonDetailsView-parentBean"/>
    <bean id="PropDev-S2sSubmisisonDetailsView-parentBean" abstract="true"
          parent="Uif-FormView" p:header.render="false" p:breadcrumbs.render="false"
          p:formClass="org.kuali.coeus.propdev.impl.core.ProposalDevelopmentDocumentForm"
          p:viewHelperService="#{#getService('proposalDevelopmentViewHelperService')}">
        <property name="stickyFooter" value="@{renderedInDialog}"/>
        <property name="applicationHeader.render" value="@{!renderedInDialog}"/>
        <property name="singlePageView" value="true"/>
        <property name="additionalScriptFiles">
            <list>
                <value>scripts/common/medusa.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>css/common/core.css</value>
            </list>
        </property>
		<property name="context">
			<map>
                <entry key="proposalAuthConsts" value="@{T(org.kuali.coeus.propdev.impl.core.ProposalDevelopmentConstants.AuthConstants)}"/>
			</map>
		</property>
        <property name="page">
            <bean parent="Uif-Page" p:header.render="false">
                <property name="items">
                    <list>
                        <bean parent="PropDev-OpportunityPage-Info" p:defaultActiveTabId="PropDev-OpportunityPage-SubmissionDetailsSection" p:readOnly="true"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="Close"
                              p:onClickScript="e.preventDefault();closeIframeDialog();return false;"
                              p:dialogResponse="false" p:order="20"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <!--Special proposal summary view for the Action List -->
    <bean id="PropDev-SummaryView" parent="PropDev-SummaryView-parentBean"/>
    <bean id="PropDev-SummaryView-parentBean" abstract="true"
          parent="Uif-FormView" p:header.render="false" p:breadcrumbs.render="false"
          class="org.kuali.coeus.propdev.impl.core.ProposalDocumentSummaryView"
          p:formClass="org.kuali.coeus.propdev.impl.core.ProposalDevelopmentDocumentForm"
          p:authorizer="#{#getService('proposalDevelopmentDocumentViewAuthorizer')}"
          p:viewHelperService="#{#getService('proposalDevelopmentViewHelperService')}"
          p:readOnly="true">
		<property name="context">
			<map>
				<entry key="budgetAuthConsts" value="@{T(org.kuali.coeus.propdev.impl.budget.core.ProposalBudgetConstants.AuthConstants)}"/>
                <entry key="proposalAuthConsts" value="@{T(org.kuali.coeus.propdev.impl.core.ProposalDevelopmentConstants.AuthConstants)}"/>
			</map>
		</property>	          
        <property name="stickyFooter" value="true"/>
        <property name="applicationHeader">
            <null/>
        </property>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page" p:header.render="false">
                <property name="items">
                    <list>
                        <bean parent="Uif-TabGroup">
                            <property name="items">
                                <list>
                                    <bean parent="PropDev-SubmitPage-ProposalSummary"/>
                                    <bean parent="PropDev-BudgetPage-Collection" p:headerText="Budget Summary"
                                            p:renderLineActions="false">
                                        <property name="header.rightGroup">
                                            <null/>
                                        </property>
                                        <property name="items">
                                            <list merge="true">
                                                <bean parent="Uif-DataField" p:label="Name" p:propertyName="name" p:order="10" />

                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-Link" p:linkText="Open Proposal" p:target="_top"
                              p:href="@{#ConfigProperties['application.url']}/kc-pd-krad/proposalDevelopment?methodToCall=docHandler&amp;docId=@{document.documentNumber}&amp;command=displayActionListView"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>


    <bean id="PropDev-CertificationView" parent="PropDev-CertificationView-parentBean"/>
    <bean id="PropDev-CertificationView-parentBean" abstract="true" parent="Uif-FormView"
          p:formClass="org.kuali.coeus.propdev.impl.core.ProposalDevelopmentDocumentForm"
          p:viewHelperService="#{#getService('proposalDevelopmentViewHelperService')}">
        <property name="stickyFooter" value="true"/>
        <property name="applicationHeader.render" value="true"/>
        <property name="singlePageView" value="true"/>
        <property name="additionalScriptFiles">
            <list>
                <value>scripts/common/questionnaire.js</value>
                <value>scripts/propdev/core.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>css/common/questionnaire.css</value>
            </list>
        </property>
        <property name="header" ref="PropDev-CertificationHeader" />
        <property name="page">
            <bean id="PropDev-CertificationView-Page" parent="Uif-Page">
                <property name="items">
                    <list>
                    <bean parent="Uif-MessageField" p:label="Proposal#" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.proposalNumber}" p:order="10" />
                        <bean parent="Uif-MessageField" p:label="Title" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.title}" p:order="20" />  
                        <bean parent="Uif-MessageField" p:label="PI" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.principalInvestigatorName}" p:order="30" />
                       <bean parent="Uif-MessageField" p:label="Lead Unit" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.unitNumber}" p:order="40" />   
                       <bean parent="Uif-MessageField" p:label="Sponsor" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.sponsorName}" p:order="50" /> 
                         <bean parent="Uif-MessageField" p:label="Deadline Date" p:labelLeft="true"
                              p:messageText="@{document.developmentProposal.deadlineDate}" p:order="60" />
                        <bean parent="Uif-SecondaryActionButton" p:actionLabel="Print" p:order="70">
                            <property name="actionUrl">
                                <bean parent="Uif-Url"
                                      p:href="../kc-pd-krad/proposalDevelopment?methodToCall=printQuestionnaire&amp;formKey=@{formKey}&amp;helper=proposalPersonQuestionnaireHelper&amp;index=0"/>
                            </property>
                        </bean>
                        <bean parent="Questionnaire-QuestionsGroup" p:propertyName="proposalPersonQuestionnaireHelper.answerHeaders[0].questions"
                              p:order="80" />
                    </list>
                </property>
                <property name="footer">
                    <bean parent="Uif-FooterBase" p:dataAttributes="sticky_footer:true">
                        <property name="items">
                            <list>
                                <bean parent="Uif-SecondaryActionButton" p:actionLabel="Cancel" p:methodToCall="returnToHub" p:order="10"/>
                                <bean parent="Uif-PrimaryActionButton" p:actionLabel="Certify Answers" p:methodToCall="certifyAnswers"
                                      p:order="20"/>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-CertificationClose-Dialog" parent="PropDev-CertificationClose-Dialog-parentBean"/>
    <bean id="PropDev-CertificationClose-Dialog-parentBean" abstract="true" parent="Uif-DialogGroup"
          p:headerText="Please Select" p:promptText="@{#ViewHelper.certifyModalMessage()}">
        <property name="footer">
            <bean parent="Uif-DialogFooter">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton" p:ajaxSubmit="false"
                              p:methodToCall="closeCertWithSave" p:disableBlocking="true"
                              p:dialogDismissOption="REQUEST"
                              p:actionLabel="Save and exit" p:order="10"/>
                        <bean parent="Uif-SecondaryActionButton" p:ajaxSubmit="false"
                              p:methodToCall="closeCertWithoutSave" p:disableBlocking="true"
                              p:dialogDismissOption="REQUEST"
                              p:actionLabel="Exit without save" p:order="20"/>
                        <bean parent="Uif-SecondaryActionButton" p:dialogDismissOption="PRESUBMIT"
                              p:actionLabel="Return To Questions" p:order="30"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-CertificationHeader" parent="PropDev-CertificationHeader-parentBean" />
    <bean id="PropDev-CertificationHeader-parentBean" abstract="true"
          parent="Uif-ViewHeader" p:headerText="Certification for @{proposalPersonQuestionnaireHelper.proposalPerson.fullName}"
          p:areaTitleText="Proposal Development"         
          p:onDocumentReadyScript="Kc.PropDev.setHeaderHeight();">
        <property name="rightGroup">
            <bean parent="Uif-VerticalBoxGroup" p:additionalCssClasses="uif-documentInfo">
                <property name="items">
                    <list>
                        <bean parent="Uif-Message" p:messageText="[strong]Document Info[/strong]"
                              p:order="10" />
                        <bean parent="Uif-MessageField" p:label="Doc Nbr" p:labelLeft="true"
                              p:messageText="@{document.documentNumber}" p:order="20" />
                        <bean parent="Uif-MessageField" p:label="S2S Connected" p:order="30" p:labelLeft="true">
                            <property name="message">
                                <bean parent="Uif-Message"
                                      p:messageText="@{#empty(document.developmentProposal.s2sOpportunity)?'no':'yes'}"
                                      p:cssClasses="@{#empty(document.developmentProposal.s2sOpportunity)?'label,label-default':'label,label-success'}"
                                      p:style="margin: 0;"/>
                            </property>
                        </bean>
                        <bean parent="Uif-MessageField" p:label="Initiator" p:labelLeft="true"
                              p:messageText="@{documentInitiatorNetworkId}" p:order="40" />
                        <bean parent="Uif-MessageField" p:label="Status" p:labelLeft="true"
                              p:messageText="@{#ViewHelper.getProposalStatusForDisplay(document.developmentProposal)}"
                              p:order="50" />
                        <bean parent="PropDev-DocumentHeader-MoreInfo" p:order="60" />
                    </list>
                </property>
            </bean>
        </property>
    </bean>

</beans>
