<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="CommentTypeMaintenanceDocument" parent="CommentTypeMaintenanceDocument-parentBean"/>
	<bean id="CommentTypeMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
		<property name="businessObjectClass" value="org.kuali.kra.bo.CommentType"/>
		<property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl"/>
		<property name="maintainableSections">
			<list>
				<ref bean="CommentTypeMaintenanceDocument-EditCommentType"/>
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>commentTypeCode</value>
			</list>
		</property>
		<property name="allowsRecordDeletion" value="true" />
	
		
		<property name="documentTypeName" value="CommentTypeMaintenanceDocument"/>
		<property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
	</bean>

	<!-- Maintenance Section Definitions -->
	
	<bean id="CommentTypeMaintenanceDocument-EditCommentType" parent="CommentTypeMaintenanceDocument-EditCommentType-parentBean"/>
	<bean id="CommentTypeMaintenanceDocument-EditCommentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="Edit Comment Type"/>
		<property name="title" value="Edit Comment Type"/>
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="commentTypeCode" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="description" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="templateFlag"/>
				<bean parent="MaintainableFieldDefinition" p:name="checklistFlag"/>
				<bean parent="MaintainableFieldDefinition" p:name="awardCommentScreenFlag"/>
			</list>
		</property>
	</bean>
</beans>
