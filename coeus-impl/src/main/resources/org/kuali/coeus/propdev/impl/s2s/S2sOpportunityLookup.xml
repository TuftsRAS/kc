<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- Must disabled richTable capabilities to avoid javascript/datable errors related to conflict with s2sOpportunityCfdas subCollection -->
    <bean id="S2sOpportunity-LookupView" parent="S2sOpportunity-LookupView-parentBean" p:viewName="S2sOpportunity-LookupViewName"/>
	<bean id="S2sOpportunity-LookupView-parentBean" abstract="true"
		parent="Uif-LookupView" p:header.headerText="Opportunity Search"
		p:dataObjectClassName="org.kuali.coeus.propdev.impl.s2s.S2sOpportunity"
		p:viewHelperService="#{#getService('s2sOpportunityLookupable')}"
	    p:resultsGroup.renderAddLine="false" p:resultsGroup.renderLineActions="true" p:resultsGroup.layoutManager.richTable.render="false" p:resultsGroup.layoutManager.renderSequenceField="false">

		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="providerCode" p:required="true"
					p:label="Search Domain" p:fieldLabel.renderColon="false" p:order="10">
					<property name="control">
						<bean parent="Uif-DropdownControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.coeus.sys.framework.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
							p:businessObjectClass="org.kuali.coeus.propdev.impl.s2s.S2sProvider"
							p:includeKeyInDescription="false" p:includeBlankRow="false"
							p:keyAttributeName="code" p:labelAttributeName="description" />
					</property>
				</bean>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="packageId"
					  p:fieldLabel.renderColon="false" p:order="20" >
					<property name="validCharactersConstraint">
						<bean class="org.kuali.rice.krad.datadictionary.validation.constraint.ConfigurationBasedRegexPatternConstraint"
							  p:messageKey="validation.lookup.packageId" p:patternTypeKey="validationPatternRegex.packageId"/>
					</property>
				</bean>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="opportunityId"
					p:fieldLabel.renderColon="false" p:order="30" >
                    <property name="validCharactersConstraint">
                        <bean class="org.kuali.rice.krad.datadictionary.validation.constraint.ConfigurationBasedRegexPatternConstraint"
                              p:messageKey="validation.lookup.opportunityId" p:patternTypeKey="validationPatternRegex.opportunityId"/>
                    </property>
                </bean>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="competitionId"
					  p:fieldLabel.renderColon="false" p:order="40" >
					<property name="validCharactersConstraint">
						<bean class="org.kuali.rice.krad.datadictionary.validation.constraint.ConfigurationBasedRegexPatternConstraint"
							  p:messageKey="validation.lookup.competitionId" p:patternTypeKey="validationPatternRegex.competitionId"/>
					</property>
				</bean>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="cfdaNumber"
					p:fieldLabel.renderColon="false" p:order="50" >
                    <property name="validCharactersConstraint">
                        <bean class="org.kuali.rice.krad.datadictionary.validation.constraint.ConfigurationBasedRegexPatternConstraint"
                              p:messageKey="validation.lookup.cfdaNumber" p:patternTypeKey="validationPatternRegex.cfdaNumber"/>
                    </property>
                </bean>
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="Uif-DataField" p:propertyName="openingDate"
					  p:order="10" />
				<bean parent="Uif-DataField" p:propertyName="closingDate"
					  p:order="20" />
				<bean parent="Uif-DataField" p:propertyName="packageId"
					  p:order="30" />
				<bean parent="Uif-DataField" p:propertyName="opportunityId"
					  p:order="40" />
				<bean parent="Uif-DataField" p:propertyName="opportunityTitle"
					  p:order="50" />
				<bean parent="Uif-DataField" p:propertyName="competitionId"
					  p:order="60" />
				<bean parent="Uif-DataField" p:propertyName="competitionTitle"
					  p:order="70" />
				<bean parent="Uif-DataField" p:propertyName="schemaUrl"
					  p:order="80" />
				<bean parent="Uif-DataField" p:propertyName="instructionUrl"
					  p:order="90" />
			</list>
		</property>
		<property name="resultsGroup.subCollections">
			<list>
				<bean parent="Uif-TableSubCollection-WithinSubSection" p:order="10" p:renderAddLine="false" p:renderLineActions="false" p:layoutManager.richTable.render="false" p:layoutManager.renderSequenceField="false">
					<property name="propertyName" value="s2sOpportunityCfdas"/>
					<property name="collectionObjectClass" value="org.kuali.coeus.propdev.impl.s2s.S2sOpportunityCfda"/>
					<property name="items">
						<list>
							<bean p:propertyName="cfdaNumber" parent="Uif-DataField"/>
							<bean p:propertyName="cfdaDescription" parent="Uif-DataField"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="criteriaGroup">
			<bean parent="Uif-LookupCriteriaGroup">
				<property name="footer">
					<bean parent="Uif-LookupCriteriaFooter">
						<property name="items">
							<list merge="true">
								<!-- close button failed to work unless it is redefined here for some unknown reason -->
								<bean parent="Uif-SecondaryActionButton" p:actionLabel="Close" p:render="@{#form.renderedInDialog}"
									  p:onClickScript="e.preventDefault();closeLightbox();return false;" p:order="200"/>
							</list>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

    <bean id="S2sOpportunity-CreateProposalLookupView" parent="S2sOpportunity-CreateProposalLookupView-parentBean" p:viewName="S2sOpportunity-CreateProposalLookupViewName" />
    <bean id="S2sOpportunity-CreateProposalLookupView-parentBean" abstract="true" parent="S2sOpportunity-LookupView-parentBean">
        <property name="resultsGroup.lineActions">
            <list>
                <bean parent="Uif-Link" p:linkText="Create Proposal"
                      p:href="@{#ViewHelper.buildCreatePropActionHref(#line)}" p:order="10">
                </bean>
            </list>
        </property>
    </bean>

</beans>
