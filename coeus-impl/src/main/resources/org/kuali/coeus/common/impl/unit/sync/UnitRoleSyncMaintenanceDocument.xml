<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="UnitRoleSyncMaintenanceDocument" parent="UnitRoleSyncMaintenanceDocument-parentBean"/>
    <bean id="UnitRoleSyncMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.coeus.common.framework.unit.sync.UnitRoleSync"/>
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl"/>
        <property name="maintainableSections">
            <list>
                <ref bean="UnitRoleSyncMaintenanceDocument-EditUnitRoleSync"/>
                <ref bean="UnitRoleSyncMaintenanceDocument-EditSourceUnits"/>
                <ref bean="UnitRoleSyncMaintenanceDocument-EditTargetRoles"/>
            </list>
        </property>
        <property name="lockingKeys">
            <list>
                <value>id</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true"/>

        <property name="documentTypeName" value="UnitRoleSyncMaintenanceDocument"/>
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
        <property name="businessRulesClass" value="org.kuali.coeus.common.impl.unit.sync.UnitRoleSyncMaintenanceDocumentRule"/>
    </bean>

    <!-- Maintenance Section Definitions -->
    <bean id="UnitRoleSyncMaintenanceDocument-EditUnitRoleSync" parent="UnitRoleSyncMaintenanceDocument-EditUnitRoleSync-parentBean"/>
    <bean id="UnitRoleSyncMaintenanceDocument-EditUnitRoleSync-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Unit Role Sync"/>
        <property name="title" value="Edit Unit Role Sync"/>
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableFieldDefinition" p:name="syncBehaviorCode" p:required="true"/>
                <bean parent="MaintainableFieldDefinition" p:name="active" p:required="true"/>
            </list>
        </property>
    </bean>

    <bean id="UnitRoleSyncMaintenanceDocument-EditSourceUnits" parent="UnitRoleSyncMaintenanceDocument-EditSourceUnits-parentBean"/>
    <bean id="UnitRoleSyncMaintenanceDocument-EditSourceUnits-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Source Units"/>
        <property name="title" value="Edit Source Units"/>
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableCollectionDefinition">
                    <property name="name" value="sourceUnitInfos"/>
                    <property name="businessObjectClass" value="org.kuali.coeus.common.framework.unit.sync.SourceUnitInfo"/>
                    <property name="maintainableFields">
                        <list>
                            <bean parent="MaintainableFieldDefinition" p:name="sourceUnitCode" p:required="true"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="UnitRoleSyncMaintenanceDocument-EditTargetRoles" parent="UnitRoleSyncMaintenanceDocument-EditTargetRoles-parentBean"/>
    <bean id="UnitRoleSyncMaintenanceDocument-EditTargetRoles-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Target Roles"/>
        <property name="title" value="Edit Target Roles"/>
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableCollectionDefinition">
                    <property name="name" value="targetRoleInfos"/>
                    <property name="businessObjectClass" value="org.kuali.coeus.common.framework.unit.sync.TargetRoleInfo"/>
                    <property name="maintainableFields">
                        <list>
                            <bean parent="MaintainableFieldDefinition" p:name="roleId" p:required="true"/>
                            <bean parent="MaintainableFieldDefinition" p:name="descends" p:required="true"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
