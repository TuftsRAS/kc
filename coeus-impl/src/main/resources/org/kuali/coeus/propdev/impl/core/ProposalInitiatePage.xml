<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PropDev-InitiatePage" parent="PropDev-InitiatePage-parentBean" />
	<bean id="PropDev-InitiatePage-parentBean" parent="Uif-DocumentPage"
		p:header.headerText="Create Proposal">
		<property name="items">
			<list merge="false">
				<bean parent="PropDev-InitiatePage-Section" p:order="10" />
			</list>
		</property>
		<property name="header.lowerGroup">
			<bean parent="PropDev-HeaderLowerGroup" />
		</property>
		<property name="footer">
			<null />
		</property>
	</bean>

	<bean id="PropDev-InitiatePage-Section" parent="PropDev-InitiatePage-Section-parentBean" />
	<bean id="PropDev-InitiatePage-Section-parentBean" abstract="true" parent="PropDev-DefaultDetails-Section">
		<property name="items">
			<list merge="true">
				<bean parent="PropDev-InitiatePage-PrincipalInvestigatorField" p:order="70" />
			</list>
		</property>
	</bean>


	<!-- Simple Add PI field.  Not rendered by default.  Can be turned on with DD customization -->
	<bean id="PropDev-InitiatePage-PrincipalInvestigatorField" parent="PropDev-InitiatePage-PrincipalInvestigatorField-parentBean" />
	<bean id="PropDev-InitiatePage-PrincipalInvestigatorField-parentBean" abstract="true"
		  parent="Uif-InputField" p:bindingInfo.bindingObjectPath="addEmployeePiHelper" p:propertyName="personId" p:label="Principal Investigator" p:render="false" p:required="true">
		<property name="quickfinder">
			<bean parent="Uif-QuickFinder"
				  p:dataObjectClassName="org.kuali.coeus.common.framework.person.KcPerson"
				  p:fieldConversions="personId:personId"
			      p:lookupParameters="personId:personId">
			</bean>
		</property>
		<property name="propertyNamesForAdditionalDisplay">
			<list>
				<value>kcPerson.fullName</value>
			</list>
		</property>
	</bean>

</beans>
