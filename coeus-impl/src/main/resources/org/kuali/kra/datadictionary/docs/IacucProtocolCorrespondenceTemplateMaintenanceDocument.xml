<!--
 Note: This maintenance document does not have any maintenance section definitions 
       (i.e. maintainableSections).  Instead we use the additionalSectionsFile property
       to control the appearance of the whole maintenance document.
-->

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="IacucProtoCorrespTemplMaintenanceDocument" parent="IacucProtoCorrespTemplMaintenanceDocument-parentBean" />
    <bean id="IacucProtoCorrespTemplMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.kra.iacuc.correspondence.IacucProtocolCorrespondenceTemplate" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="IacucProtoCorrespTemplMaintenanceDocument-EditIacucProtoCorrespTempl" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>protoCorrespTemplId</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
        
        <property name="documentTypeName" value="IacucProtocolCorrespondenceTemplateMaintenanceDocument" />
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
        <property name="additionalSectionsFile" value="/WEB-INF/jsp/iacuc/protocolCorrespondenceTemplate.jsp" />
        
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="IacucProtoCorrespTemplMaintenanceDocument-EditIacucProtoCorrespTempl" parent="IacucProtoCorrespTemplMaintenanceDocument-EditIacucProtoCorrespTempl-parentBean" />
    <bean id="IacucProtoCorrespTemplMaintenanceDocument-EditIacucProtoCorrespTempl-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit IACUC Correspondence Template" />
        <property name="title" value="Edit IACUC Correspondcence Template" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition"
                    p:name="protoCorrespTemplId"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="protoCorrespTypeCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="committeeId"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="correspondenceTemplate"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
        </property>
    </bean>
</beans>
