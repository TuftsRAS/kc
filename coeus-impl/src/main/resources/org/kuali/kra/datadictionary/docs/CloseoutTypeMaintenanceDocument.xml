<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CloseoutTypeMaintenanceDocument" parent="CloseoutTypeMaintenanceDocument-parentBean" />
    <bean id="CloseoutTypeMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.kra.subaward.bo.CloseoutType" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="CloseoutTypeMaintenanceDocument-EditCloseoutType" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>closeoutTypeCode</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
        <property name="documentTypeName" value="CloseoutTypeMaintenanceDocument" />
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/><!--
        <property name="businessRulesClass" value="org.kuali.kra.irb.actions.submit.ValidWatermarkStatusMaintenanceDocumentRule"/>
        
    --></bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="CloseoutTypeMaintenanceDocument-EditCloseoutType" parent="CloseoutTypeMaintenanceDocument-EditCloseoutType-parentBean" />
    <bean id="CloseoutTypeMaintenanceDocument-EditCloseoutType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit CloseoutType Lookup" />
        <property name="title" value="Edit CloseoutType Lookup" />
        <property name="maintainableItems" >
            <list>
            
                <bean parent="MaintainableFieldDefinition"
                    p:name="closeoutTypeCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="description" 
                    p:required="true" />   
            </list>
        </property>
    </bean>
</beans>
