<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="ValidBasisMethodPaymentMaintenanceDocument" parent="ValidBasisMethodPaymentMaintenanceDocument-parentBean" />
    <bean id="ValidBasisMethodPaymentMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.kra.award.home.ValidBasisMethodPayment" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="ValidBasisMethodPaymentMaintenanceDocument-EditValidBasisMethodPayment" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>validBasisMethodPaymentId</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
	    <property name="documentTypeName" value="ValidBasisMethodPaymentMaintenanceDocument"/>
	    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="ValidBasisMethodPaymentMaintenanceDocument-EditValidBasisMethodPayment" parent="ValidBasisMethodPaymentMaintenanceDocument-EditValidBasisMethodPayment-parentBean" />
    <bean id="ValidBasisMethodPaymentMaintenanceDocument-EditValidBasisMethodPayment-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Valid Basis Method Pmt" />
        <property name="title" value="Edit Valid Basis Method Pmt" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition"
                    p:name="validBasisMethodPaymentId"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="basisOfPaymentCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="methodOfPaymentCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="invInstructionsIndicator"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
        </property>
    </bean>
</beans>
