<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="PersonSignatureMaintenanceDocument" parent="PersonSignatureMaintenanceDocument-parentBean" />
    <bean id="PersonSignatureMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.coeus.common.framework.person.signature.PersonSignature" />
        <property name="maintainableClass" value="org.kuali.coeus.common.impl.person.signature.PersonSignatureMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="PersonSignatureMaintenanceDocument-EditPersonSignature" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>personSignatureId</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
        <property name="documentTypeName" value="PersonSignatureMaintenanceDocument" />
		<property name="documentAuthorizerClass" value="org.kuali.coeus.common.impl.person.signature.PersonSignatureMaintenanceDocumentAuthorizer"/>
        <property name="businessRulesClass" value="org.kuali.coeus.common.impl.person.signature.ValidPersonSignatureMaintenanceDocumentRule"/>
        
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="PersonSignatureMaintenanceDocument-EditPersonSignature" parent="PersonSignatureMaintenanceDocument-EditPersonSignature-parentBean" />
    <bean id="PersonSignatureMaintenanceDocument-EditPersonSignature-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit PersonSignature" />
        <property name="title" value="Edit PersonSignature" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition" 
                	p:name="personId" 
                	p:required="true" />
 		        <bean parent="MaintainableFieldDefinition" 
 		        	p:name="person.userName" 
 		        	p:required="false" />
               <bean parent="MaintainableFieldDefinition"
                    p:name="templateFile" />
               <bean parent="MaintainableFieldDefinition"
                    p:name="signatureActive" 
                    p:required="false"  />               
            </list>
        </property>
    </bean>
</beans>
