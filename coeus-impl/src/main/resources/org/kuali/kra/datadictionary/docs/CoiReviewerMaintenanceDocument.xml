<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CoiReviewerMaintenanceDocument" parent="CoiReviewerMaintenanceDocument-parentBean" />
    <bean id="CoiReviewerMaintenanceDocument-parentBean" abstract="true" parent="KcMaintenanceDocumentEntry">
        <property name="businessObjectClass" value="org.kuali.kra.coi.CoiReviewer" />
        <property name="maintainableClass" value="org.kuali.kra.maintenance.KraMaintainableImpl" />
        <property name="maintainableSections" >
            <list>
                <ref bean="CoiReviewerMaintenanceDocument-EditCoiReviewer" />
            </list>
        </property>
        <property name="lockingKeys" >
            <list>
                <value>reviewerCode</value>
            </list>
        </property>
        <property name="allowsRecordDeletion" value="true" />
        <property name="documentTypeName" value="CoiReviewerMaintenanceDocument" />
        <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    </bean>

    <!-- Maintenance Section Definitions -->
    
    <bean id="CoiReviewerMaintenanceDocument-EditCoiReviewer" parent="CoiReviewerMaintenanceDocument-EditCoiReviewer-parentBean" />
    <bean id="CoiReviewerMaintenanceDocument-EditCoiReviewer-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Coi Reviewer" />
        <property name="title" value="Edit Coi Reviewer" />
        <property name="maintainableItems" >
            <list>
                <bean parent="MaintainableFieldDefinition"
                    p:name="reviewerCode"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="description"
                    p:required="true" />
                <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
        </property>
    </bean>
</beans>
